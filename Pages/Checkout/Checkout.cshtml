@page
@model PizzaApp.Pages.Checkout.CheckoutModel
@{
}

<h1>Your Order</h1>
@{
	var photoPath = "~/images/Pizzas/" + (Model.ImageTitle + ".png");
}
<div class="align-content-center">
	<div class="col-3 mx-auto mb-5">
		<img src="@photoPath" class="w-100" asp-append-version="true"/>
		<p>Your order for the @Model.PizzaName is ready</p>
		<p>Total price for your pizza is : @Model.PizzaPrice💲</p>
		<br />
		<a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou" >Confirm Your Order </a>
	</div>
	
</div>